(function(){
  var questionSelector     = "*[data-resource='question'][data-id='<%= @subscription.question.id %>']",
      thumbSelector        = ".thumb[data-resource='question-thumb'][data-id='<%= @subscription.question.id %>']",
      $question            = $( questionSelector ),
      $thumb               = $( thumbSelector ),
      newSubscriptionCount = $( '<%= j(render "subscriptions/new", question: @subscription.question) %>' ),
      tClone,
      qClone;

  tClone = newSubscriptionCount.clone().hide();
  qClone = newSubscriptionCount.clone().hide();
  $question.find('.subscription-count').fadeOut( 'fast', function(){
    $( this ).replaceWith( qClone );
    qClone.fadeIn( 'fast' );
  });

  // ( 'fast', function(){
  // });
  $thumb.find('.subscription-count').fadeOut( 'fast', function(){
    $( this ).replaceWith( tClone );
    tClone.fadeIn( 'fast' );
  });

}).call(this);